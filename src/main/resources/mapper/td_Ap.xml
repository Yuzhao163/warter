<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.water.water.dao.td_ApDao">
    <resultMap id="BaseResultMap" type="com.water.water.pojo.td_Ap">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="AreaID" property="AreaID" jdbcType="VARCHAR"/>
        <result column="PipID" property="PipID" jdbcType="VARCHAR"/>
    </resultMap>

    <!--代替之前的td_pips中的getAreasIdByPipis，获取分区数据-->
    <select id="getAreasIdByPips" resultMap="BaseResultMap">
         select AreaID from td_pips where PipID=#{PipID};
    </select>

    <!--通过ap表获取对应的PipID-->
    <select id="getPipID" resultMap="BaseResultMap">
        select PipID from td_ap where AreaID = #{AreaID};
    </select>
</mapper>
